<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gridItemImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="Horse image"
            app:layout_constraintBottom_toTopOf="@+id/gridItemText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <ImageButton
            android:id="@+id/gridItemAudio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:contentDescription="@string/play_horse_sound"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/gridItemText"
            app:layout_constraintStart_toStartOf="@+id/gridItemText"
            app:layout_constraintTop_toBottomOf="@+id/gridItemText"
            app:srcCompat="@drawable/audio_regular" />

        <TextView
            android:id="@+id/gridItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/placeholder"
            app:layout_constraintBottom_toTopOf="@+id/gridItemAudio"
            app:layout_constraintEnd_toEndOf="@+id/gridItemImage"
            app:layout_constraintStart_toStartOf="@+id/gridItemImage"
            app:layout_constraintTop_toBottomOf="@+id/gridItemImage" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>